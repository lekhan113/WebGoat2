pipeline {
    agent any
    tools {
        maven 'maven' 
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage ('Build') {
          steps {
            sh 'mvn spotless:apply'
            sh 'mvn clean install -DskipTests'
          }
        }

        stage('Run SonarQube Analysis') {
            steps {
                script {
                    def mavenHome = tool name: 'maven', type: 'Maven'
                    sh "${mavenHome}/bin/mvn sonar:sonar -Dsonar.projectKey=webgoat25 -Dsonar.host.url=http://192.168.72.132:9000 -Dsonar.login=squ_a1305ac7fc2b4a55879f4b333be4ce5cc44ed8fc"
                }
            }
        }
    }
}
